{
  "name": "dietmed-global",
  "version": "1.0.0",
  "description": "Global diet medication verification and safety platform",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=dietmed-global-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist --project-name dietmed-global",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:create:local": "wrangler d1 create dietmed-global-production",
    "db:migrate:local": "wrangler d1 migrations apply dietmed-global-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply dietmed-global-production",
    "db:seed": "wrangler d1 execute dietmed-global-production --local --file=./seed.sql",
    "db:seed:extended": "wrangler d1 execute dietmed-global-production --local --file=./seed-extended.sql",
    "db:seed:200": "wrangler d1 execute dietmed-global-production --local --file=./seed-200-products.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed && npm run db:seed:extended",
    "db:reset:200": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed:200",
    "db:console:local": "wrangler d1 execute dietmed-global-production --local",
    "db:console:prod": "wrangler d1 execute dietmed-global-production",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000"
  },
  "dependencies": {
    "hono": "^4.11.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
